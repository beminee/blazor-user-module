@page "/"
@using LoginRegister.Enums
@attribute [Authorize]
@inject IAccountService AccountService

<div class="p-4">
    <div class="container">
        <h1>Hi @AccountService.User.FirstName!</h1>
        <p>Welcome to my Register&amp;Login module.
        This is just a portfolio work and isn't meant for production by any means.
        This project features a fake backend solution, complete login and register modules and functional user ranks.</p>
        <br />
        <p>Test admin login: admin - admin123</p>
        <p>Test user login: user - user123</p>
        <p>Test banned login: banned - banned123</p>

        @if (AccountService.User.Rank == UserRanks.Admin) // only display manage users if the user is an admin
        {
            <p><NavLink href="users">Manage Users</NavLink></p>
        }
    </div>
</div>
